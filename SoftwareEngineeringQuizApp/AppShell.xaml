<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SoftwareEngineeringQuizApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SoftwareEngineeringQuizApp.Views"
    Title="Software Engineering Quiz"
    FlyoutBehavior="Disabled">

    <!-- Estilos básicos del Shell -->
    <Shell.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#512BD4</Color>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="Shell.ForegroundColor" Value="White" />
                <Setter Property="Shell.TitleColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <!-- 
        Menú Principal: 
        Al iniciar la app, esta será la primera pantalla visible.
        Quitamos el FlyoutBehavior si queremos una app de navegación simple por ahora.
    -->
    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate views:MenuPrincipalPage}"
        Route="MenuPrincipal" />

</Shell>