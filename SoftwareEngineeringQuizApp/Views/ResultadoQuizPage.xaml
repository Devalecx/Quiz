<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SoftwareEngineeringQuizApp.ViewModels"
             x:Class="SoftwareEngineeringQuizApp.Views.ResultadoQuizPage"
             Title="Resultados"
             Shell.NavBarIsVisible="False">
    <!-- Ocultar barra nav para evitar volver atrás -->

    <Grid RowDefinitions="*, Auto" Padding="30" BackgroundColor="White">

        <VerticalStackLayout Grid.Row="0" Spacing="20" VerticalOptions="Center">

            <Label Text="{Binding MensajeResultado}"
                   TextColor="{Binding ColorResultado}"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>

            <Frame BackgroundColor="#F5F5F5" CornerRadius="100" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" HasShadow="False">
                <VerticalStackLayout VerticalOptions="Center">
                    <Label Text="{Binding Aciertos}" FontSize="60" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#333"/>
                    <BoxView HeightRequest="2" WidthRequest="50" Color="Gray"/>
                    <Label Text="{Binding TotalPreguntas}" FontSize="30" HorizontalOptions="Center" TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Puntuación Final" HorizontalOptions="Center" TextColor="Gray"/>

        </VerticalStackLayout>

        <Button Grid.Row="1"
                Text="Volver al Menú"
                Command="{Binding VolverAlMenuCommand}"
                BackgroundColor="#512BD4"
                TextColor="White"
                HeightRequest="60"
                CornerRadius="12"
                Margin="0,0,0,20"/>
    </Grid>
</ContentPage>